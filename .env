# Server Configuration
PORT=3000
NODE_ENV=production

# Google Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# WhatsApp Bot Configuration
BOT_NAME=AI Assistant
SESSION_NAME=whatsapp_session_main

# Puppeteer Configuration (for Render.com)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome-stable

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=2
RESPONSE_DELAY_MIN=1000
RESPONSE_DELAY_MAX=3000

# CORS Configuration
FRONTEND_URL=https://your-frontend-domain.com
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Database (Optional - for future scaling)
# MONGODB_URI=mongodb://localhost:27017/whatsapp_bot
# REDIS_URL=redis://localhost:6379

# Security
SESSION_SECRET=your-super-secret-key-here

# Logging
LOG_LEVEL=info
LOG_FILE=bot.log

# WhatsApp Business API (Future)
# WHATSAPP_BUSINESS_TOKEN=your_business_token
# WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
